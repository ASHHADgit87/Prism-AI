{
  "version": 2,
  "builds": [
    {
      "src": "server.ts",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs20.x",
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "prisma/**",
          "node_modules/.prisma/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.ts"
    }
  ]
}
